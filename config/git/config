[core]
	fileMode = false
	precomposeunicode = false
    pager = delta
[pager]
    diff = delta
    show = delta
    log = delta
[delta]
    syntax-theme = OneHalfDark
    features = line-numbers 
[interactive]
    diffFilter = delta --color-only
[color]
	ui = auto
[credential]
	helper = osxkeychain
[push]
	default = simple
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process
[merge]
	tool = vimdiff
[mergetool]
	path = nvim
[pull]
	rebase = true
[rebase]
	autoStash = true
